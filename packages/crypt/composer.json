{
    "name": "windwalker/crypt",
    "type": "windwalker-package",
    "description": "Windwalker Crypt package",
    "keywords": [
        "windwalker",
        "framework",
        "crypt",
        "symmetric",
        "sodium",
        "libsodium",
        "openssl"
    ],
    "homepage": "https://github.com/windwalker-io/crypt",
    "license": "MIT",
    "require": {
        "php": ">=8.4.6",
        "paragonie/constant_time_encoding": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0||^11.0||^12.0",
        "windwalker/test": "^4.0",
        "ext-openssl": "*",
        "ext-sodium": "*"
    },
    "suggest": {
        "ext-openssl": "Install openssl to support legacy openssl cipher.",
        "ext-sodium": "Install sodium to support sodium cipher."
    },
    "minimum-stability": "beta",
    "autoload": {
        "psr-4": {
            "Windwalker\\Crypt\\": "src/"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Windwalker\\Crypt\\Test\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.x-dev"
        }
    },
    "config": {
        "platform": {
            "php": "8.4.1"
        }
    }
}
