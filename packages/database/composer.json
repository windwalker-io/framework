{
    "name": "windwalker/database",
    "type": "windwalker-package",
    "description": "Windwalker Database package",
    "keywords": [
        "windwalker",
        "framework",
        "database",
        "db",
        "mysql",
        "postgresql",
        "sqlsrv",
        "pdo"
    ],
    "homepage": "https://github.com/windwalker-io/database",
    "license": "MIT",
    "require": {
        "php": ">=8.0.0",
        "windwalker/query": "^4.0",
        "windwalker/event": "^4.0",
        "windwalker/data": "^4.0",
        "windwalker/cache": "^4.0",
        "windwalker/pool": "^4.0",
        "windwalker/utilities": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0||^9.0||^10.0",
        "jdorn/sql-formatter": "^1.2",
        "windwalker/test": "^4.0",
        "asika/sql-splitter": "^1.0"
    },
    "suggest": {
    },
    "minimum-stability": "beta",
    "autoload": {
        "psr-4": {
            "Windwalker\\Database\\": "src/"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Windwalker\\Database\\Test\\": "test/"
        }
    },
    "extra": {
        "windwalker": {
            "packages": [
                "Windwalker\\Database\\DatabasePackage"
            ]
        },
        "branch-alias": {
            "dev-master": "4.x-dev"
        }
    },
    "config": {
        "platform": {
            "php": "8.0.0"
        }
    }
}
