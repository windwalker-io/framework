{
    "name": "windwalker/language",
    "type": "windwalker-package",
    "description": "Windwalker Language package",
    "keywords": ["windwalker", "framework", "language"],
    "homepage": "https://github.com/ventoviro/windwalker-language",
    "license": "LGPL-2.0-or-later",
    "require": {
        "php": ">=5.5.9",
        "ext-json": "*"
    },
    "require-dev": {
        "symfony/yaml": "3.*",
        "windwalker/test": "~3.0"
    },
    "suggest": {
        "symfony/yaml": "Install 3.* if you require YAML language format."
    },
    "minimum-stability": "beta",
    "autoload": {
        "psr-4": {
            "Windwalker\\Language\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev"
        }
    }
}
